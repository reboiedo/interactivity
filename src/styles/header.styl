.header {
    display: flex;
    width: 100%;
    height: 100vh;
    background-color: $black;
    align-items: center;
    justify-content: center;
        .content {
            width: 80%;
            height 80%;
            background-color: white;
            }
        +below(600px){
        
            justify-content: flex-start;

            .content {
                width: 100%;
                height: 100%;
                background-color: red;
            }
        }
}
