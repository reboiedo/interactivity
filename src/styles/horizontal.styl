.hero-section {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 100vh;
}

.horizontal-container {
  width: 100vh;
  height: 100vw;
  overflow-y: auto;
  overflow-x: hidden;
  padding-top: 400px;
  //margin-top: 100vh;
  /*display: flex;
  direction: column;
  align-items: center;
  justify-content: center; */
  transform: rotate(-90deg) translateY(-100vh);
  transform-origin: right top;
  background-color: #fafafa;
  position: absolute; 
  top: 0;
}

.horizontal-container > div {
  width: 400px;
  height: 400px;
  transform: rotate(90deg);
  background-color: #bababa;
  transform-origin: right top;
  margin: 600px auto;

}

